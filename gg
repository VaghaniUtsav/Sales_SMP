Total Clicks Dynamic = 
VAR SelectedPeriod = SELECTEDVALUE('Period Selection'[Period Code], "YDAY")
VAR MaxDate = MAX('DateTable'[Date])
VAR Result = 
    SWITCH(
        SelectedPeriod,
        "YDAY", [Total Clicks],
        "WTD", [Total Clicks],
        "MTD", [Total Clicks],
        "QTD", [Total Clicks],
        "YTD", [Total Clicks],
        [Total Clicks]
    )
RETURN Result
